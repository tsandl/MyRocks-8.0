# For issue#254
set gap_lock_raise_error=1;
create table t (id int primary key, value int);
begin;
update t set value=100 where id in (1, 2);
commit;
begin;
--error ER_UNKNOWN_ERROR
select * from t for update;
commit;
drop table t;
